<div class="login-box">

    <div class="box login-box-body">

        <form name="form" ng-submit="login.login(form)">
            <div class="form-group" ng-show="login.controle.sucesso == false">
                <div class="alert alert-warning alert-dismissable">
                    <!--<button type="button" class="close"  aria-hidden="true">&times;</button>-->
                    <h4><i class="icon fa fa-warning"></i> Atenção!</h4>
                    <span ng-repeat="msg in login.controle.mensagens" ng-bind="msg.Mensagem" style="display:block"></span>
                </div>
            </div>
            <div class="form-group input-group has-feedback">
                <span class="input-group-addon">
                    <i class="fa fa-user"></i>
                </span>
                <input type="text" class="form-control" placeholder="@TextosPaginas.Login_Login" ng-model="login.user.login" maxlength="50" empty-to-null>

            </div>
            <div class="form-group input-group has-feedback">
                <span class="input-group-addon">
                    <i class="fa fa-lock"></i>
                </span>
                <input type="password" class="form-control" placeholder="@TextosPaginas.Login_Senha" ng-model="login.user.senha" maxlength="32" empty-to-null>
            </div>
            <div class="row">

                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">@TextosPaginas.Login_Logar</button>
                </div><!-- /.col -->
            </div>

        </form>
        <div class="overlay" ng-show="login.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>
    </div><!-- /.login-box-body -->
</div><!-- /.login-box -->