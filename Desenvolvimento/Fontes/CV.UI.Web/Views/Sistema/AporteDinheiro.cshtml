<section class="content-header">
    <h1>
        @TextosPaginas.Home_AporteDinheiro

    </h1>
    <ol class="breadcrumb">

        <li>@TextosPaginas.Home_Menu</li>
        <li class="active">@TextosPaginas.Home_AporteDinheiro</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemAporteDinheiro.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemAporteDinheiro.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemAporteDinheiro.filtraDado()" >
            <div class="box-body">
                <div class="row">
                    <div class="form-group col-md-6" ng-class="{ 'has-error':itemAporteDinheiro.CamposInvalidos.Moeda}">
                        <label>@TextosPaginas.Gasto_Moeda</label>
                        <select ng-model="itemAporteDinheiro.itemMoeda" class="form-control" ng-options="obj.Descricao for obj in itemAporteDinheiro.ListaMoeda track by obj.Codigo">
                            <option value="">@TextosPaginas.Selecione</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label>@TextosPaginas.Foto_DataDe</label>
                        <div class="dropdown">
                            <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                                <div class="input-group">
                                    <input date-input ng-model="itemAporteDinheiro.filtro.DataInicioDe" class="form-control" input-mask="{mask: 'd/m/y'}"
                                           datapattern="dd/MM/yyyy">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </span>
                                </div>
                            </a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <datetimepicker data-ng-model="itemAporteDinheiro.filtro.DataInicioDe"
                                                data-datetimepicker-config="{  minView:'day' , langCode:itemAporteDinheiro.Idioma()  }" />
                            </ul>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label>@TextosPaginas.Foto_DataAte</label>
                        <div class="dropdown">
                            <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                                <div class="input-group">
                                    <input date-input ng-model="itemAporteDinheiro.filtro.DataInicioAte" class="form-control" input-mask="{mask: 'd/m/y'}"
                                           datapattern="dd/MM/yyyy">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </span>
                                </div>
                            </a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <datetimepicker data-ng-model="itemAporteDinheiro.filtro.DataInicioAte"
                                                data-datetimepicker-config="{  minView:'day' , langCode:itemAporteDinheiro.Idioma()  }" />
                            </ul>
                        </div>
                    </div>

                </div>


            </div><!-- /.box-body -->
            <div class="box-footer">
                <a role="button" class="btn btn-primary " title="@TextosPaginas.Adicionar" ng-click="itemAporteDinheiro.Incluir()">
                    <span class="fa fa-plus" aria-hidden="true"></span>
                </a>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-search" aria-hidden="true"></span> @TextosPaginas.Pesquisar
                </button>

            </div>
        </form>
    </div><!-- /.box -->



    <div class="box" >
        <div class="overlay" ng-show="itemAporteDinheiro.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>
        <div class="box-body table-responsive">
            <div class="gridStyle" ui-grid="itemAporteDinheiro.gridOptions" ></div>


        </div>
    </div>


    <script type="text/ng-template" id="modalDelete.html">
        <div class="modal-header">
            <span>@TextosPaginas.ConfirmaExclusao</span>
        </div>
        <div class="modal-body">
            <button type="button" class="btn btn-info btn-lg btn-block" ng-click="vmDelete.delete()">@TextosPaginas.Sim</button>
            <button type="button" class="btn btn-default btn-lg btn-block" ng-click="vmDelete.close()">@TextosPaginas.Nao</button>
        </div>
        <div class="modal-footer hidden-lg hidden-md">
            <button type="button" class="btn btn-default btn-lg btn-block" ng-click="vmDelete.back()">@TextosPaginas.Voltar</button>
        </div>
    </script>


    <script type="text/ng-template" id="BotoesGridTemplate.html">

        <div class="ngCellText hidden-xs">
			<button type="button" class="btn btn-primary small" title="@TextosPaginas.Editar" ng-click="grid.appScope.EditarItem(row.entity)"><span class="fa fa-pencil" aria-hidden="true"></span></button>
			<button type="button" class="btn btn-danger small" title="@TextosPaginas.Excluir" ng-click="grid.appScope.askDelete(row.entity, $index)"><span class="fa fa-trash" aria-hidden="true"></span></button>

        </div>


    </script>

</section><!-- /.content -->