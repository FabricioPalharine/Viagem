<div class="modal-header">
    <span>@TextosPaginas.Sugestao_Manutencao</span>
</div>
<!-- Main content -->
<div class="modal-body" ng-init="itemVerificarSugestaoEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemVerificarSugestaoEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" name="form" novalidate>
            <div class="box-body">

                <div class="row" ng-show="itemVerificarSugestaoEdit.messages.length > 0">
                    <div class="col-md-12">
                        <div class="callout callout-danger">
                            <h4>@TextosPaginas.Geral_ValidarErros</h4>
                            <ul>
                                <li ng-repeat="erro in itemVerificarSugestaoEdit.messages">
                                    <span ng-bind="erro.Mensagem"></span>
                                </li>
                            </ul>

                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-6" ng-class="{ 'has-error':itemVerificarSugestaoEdit.CamposInvalidos.Local}">
                        <label>@TextosPaginas.Sugestao_Local</label>
                        <input type="text" class="form-control" ng-model="itemVerificarSugestaoEdit.itemSugestao.Local" maxlength="100" empty-to-null>

                    </div>
                    <div class="form-group col-md-6" ng-class="{ 'has-error':itemVerificarSugestaoEdit.CamposInvalidos.Tipo}">
                        <label>@TextosPaginas.Sugestao_Tipo</label>
                        <input type="text" class="form-control" ng-model="itemVerificarSugestaoEdit.itemSugestao.Tipo" maxlength="50" empty-to-null>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12" ng-class="{ 'has-error':itemVerificarSugestaoEdit.CamposInvalidos.Comentario}">
                        <label>@TextosPaginas.Sugestao_Comentario</label>

                        <textarea class="form-control" rows="5" ng-model="itemVerificarSugestaoEdit.itemSugestao.Comentario"></textarea>

                    </div>

                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <label>@TextosPaginas.CalendarioPrevisto_DataInicio</label>
                        <div class="dropdown">
                            <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                                <div class="input-group">
                                    <input date-input ng-model="itemVerificarSugestaoEdit.itemAgendamento.DataInicio" class="form-control" input-mask="{mask: 'd/m/y'}"
                                           datapattern="dd/MM/yyyy">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </span>
                                </div>
                            </a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <datetimepicker data-ng-model="itemVerificarSugestaoEdit.itemAgendamento.DataInicio"
                                                data-datetimepicker-config="{  minView:'day' , langCode:itemVerificarSugestaoEdit.Idioma()  }" />
                            </ul>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <label>&nbsp;</label>
                        <input type="text" class="form-control" ng-model="itemVerificarSugestaoEdit.itemAgendamento.strHoraDataInicio" input-mask="{mask: 'h:s:s'}" empty-to-null>

                    </div>

                    <div class="col-xs-6">
                        <label>@TextosPaginas.CalendarioPrevisto_DataFim</label>
                        <div class="dropdown">
                            <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                                <div class="input-group">
                                    <input date-input ng-model="itemVerificarSugestaoEdit.itemAgendamento.DataFim" class="form-control" input-mask="{mask: 'd/m/y'}"
                                           datapattern="dd/MM/yyyy">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </span>
                                </div>
                            </a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <datetimepicker data-ng-model="itemVerificarSugestaoEdit.itemAgendamento.DataFim"
                                                data-datetimepicker-config="{  minView:'day' , langCode:itemVerificarSugestaoEdit.Idioma()  }" />
                            </ul>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <label>&nbsp;</label>
                        <input type="text" class="form-control" ng-model="itemVerificarSugestaoEdit.itemAgendamento.strHoraDataFim" input-mask="{mask: 'h:s:s'}" empty-to-null>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <label>@TextosPaginas.CalendarioPrevisto_Prioridade</label>
                        <div class="form-inline">

                            <label class="radio">
                                <input type="radio" class="radio-inline" name="radSituacao" value="1" ng-model="itemVerificarSugestaoEdit.itemAgendamento.Prioridade" />

                                <label style="padding-top:5px">

                                    @TextosPaginas.CalendarioPrevisto_Baixa
                                </label>
                            </label>
                            <label class="radio" style="margin-left:10px">
                                <input type="radio" class="radio-inline" name="radSituacao" value="2" ng-model="itemVerificarSugestaoEdit.itemAgendamento.Prioridade" /><label>
                                    @TextosPaginas.CalendarioPrevisto_Media
                                </label>
                            </label>
                            <label class="radio" style="margin-left:10px">
                                <input type="radio" class="radio-inline" name="radSituacao" value="3" ng-model="itemVerificarSugestaoEdit.itemAgendamento.Prioridade" />
                                <label>
                                    @TextosPaginas.CalendarioPrevisto_Alta
                                </label>
                            </label>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label>@TextosPaginas.CalendarioPrevisto_AvisarHorario</label>
                        <input type="checkbox" ng-model="itemVerificarSugestaoEdit.itemAgendamento.AvisarHorario" class="checkbox">
                    </div>
                </div>
            </div><!-- /.box-body -->

        </form>
    </div><!-- /.box -->
    

</div><!-- /.content -->

<div class="modal-footer">
    <button type="button" class="btn btn-primary" ng-click="itemVerificarSugestaoEdit.close()">
        <span class="fa fa-close" aria-hidden="true">@TextosPaginas.Cancelar</span>
    </button>
    <button type="button" class="btn btn-primary" ng-click="itemVerificarSugestaoEdit.confirmarIgnore()" ng-if="itemVerificarSugestaoEdit.itemSugestao.Status==1">
        <span class="fa fa-remove" aria-hidden="true">@TextosPaginas.Ignorar</span>
    </button>
    <button type="button" class="btn btn-primary" ng-click="itemVerificarSugestaoEdit.abrirMapa()">
        <span class="fa fa-map-marker" aria-hidden="true">@TextosPaginas.Posicao</span>
    </button>
    <button type="button" class="btn btn-primary  pull-right" ng-click="itemVerificarSugestaoEdit.save()" ng-if="itemVerificarSugestaoEdit.itemSugestao.Status==1">
        <span class="fa fa-calendar" aria-hidden="true"></span> @TextosPaginas.Agendar
    </button>

</div>