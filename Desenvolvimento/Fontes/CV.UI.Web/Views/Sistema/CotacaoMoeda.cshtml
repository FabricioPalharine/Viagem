<section class="content-header">
    <h1>
        @TextosPaginas.Home_CotacaoMoeda

    </h1>
    <ol class="breadcrumb">

        <li>@TextosPaginas.Home_Menu</li>
        <li class="active">@TextosPaginas.Home_CotacaoMoeda</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemCotacaoMoeda.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemCotacaoMoeda.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>
        <div class="row" ng-show="itemCotacaoMoeda.messages.length > 0">
            <div class="col-md-12">
                <div class="callout callout-danger">
                    <h4>@TextosPaginas.Geral_ValidarErros</h4>
                    <ul>
                        <li ng-repeat="erro in itemCotacaoMoeda.messages">
                            <span ng-bind="erro.Mensagem"></span>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
        <form role="form" >         
            <div class="box-footer">
                <a role="button" class="btn btn-primary " title="@TextosPaginas.Adicionar" ng-click="itemCotacaoMoeda.AdicionarNovo()">
                    <span class="fa fa-plus" aria-hidden="true"></span>
                </a>              
            </div>
        </form>
    </div><!-- /.box -->
    
    <div class="box" >
        <div class="overlay" ng-show="itemCotacaoMoeda.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>
        <div class="box-body table-responsive">           
                <table class="table-condensed " style="width:100%; ">
                    <thead>
                        <tr>
                            <th class="col-xs-3">
                                @TextosPaginas.CotacaoMoeda_Moeda
                            </th>
                            <th class="col-xs-3">
                                @TextosPaginas.CotacaoMoeda_DataCotacao
                            </th>                           
                            <th class="col-xs-3">
                                @TextosPaginas.CotacaoMoeda_ValorCotacao
                            </th>
                            <th class="col-xs-2">
                            </th>
                        </tr>
                    </thead>
                    <tr ng-repeat='itemCotacao in itemCotacaoMoeda.ListaDados' >

                        <td>
                            <select  ng-if="itemCotacao.Edicao" ng-model="itemCotacao.ItemMoeda" class="form-control" ng-options="obj.Descricao for obj in itemCotacaoMoeda.ListaMoeda track by obj.Codigo">
                                <option value="">@TextosPaginas.Selecione</option>
                            </select>
                            <div ng-if="!itemCotacao.Edicao">{{itemCotacao.MoedaSigla}}</div>
                        </td>

                        <td>
                            <div class="dropdown" ng-if="itemCotacao.Edicao">
                                <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemCotacao.DataCotacao" class="form-control" input-mask="{mask: 'd/m/y'}"
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemCotacao.DataCotacao"
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemCotacaoMoeda.Idioma()  }" />
                                </ul>
                            </div>
                            <div ng-if="!itemCotacao.Edicao">{{itemCotacao.DataCotacao | date:'dd/MM/yyyy'}}</div>
                        </td>
                        <td>
                            <input ng-if="itemCotacao.Edicao" type="text" class="form-control" ng-model="itemCotacao.ValorCotacao" empty-to-null decimal-input="{digits:6, integerDigits:6}">
                            <div ng-if="!itemCotacao.Edicao">{{itemCotacao.ValorCotacao | number:'6'}}</div>
                        </td>
                      
                        <td>
                            <button type="button" class="btn btn-danger btn-sm" ng-click="itemCotacaoMoeda.RemoverMoeda( itemCotacao)" ng-if="!itemCotacao.Edicao"><span class="fa fa-trash" aria-hidden="true"></span></button>
                            <button type="button" class="btn btn-info btn-sm" ng-click="itemCotacaoMoeda.EditarMoeda( itemCotacao)" ng-if="!itemCotacao.Edicao"><span class="fa fa-pencil" aria-hidden="true"></span></button>
                            <button type="button" class="btn btn-warning btn-sm" ng-click="itemCotacaoMoeda.CancelarMoeda( itemCotacao) " ng-if="itemCotacao.Edicao"><span class="fa fa-close" aria-hidden="true"></span></button>
                            <button type="button" class="btn btn-info btn-sm" ng-click="itemCotacaoMoeda.SalvarMoeda( itemCotacao)" ng-if="itemCotacao.Edicao"><span class="fa fa-save" aria-hidden="true"></span></button>

                        </td>
                    </tr>
                </table>



        </div>
    </div>
      
    <script type="text/ng-template" id="modalDelete.html">
        <div class="modal-header">
            <span>@TextosPaginas.ConfirmaExclusao</span>
        </div>
        <div class="modal-body">
            <button type="button" class="btn btn-info btn-lg btn-block" ng-click="vmDelete.delete()">@TextosPaginas.Sim</button>
            <button type="button" class="btn btn-default btn-lg btn-block" ng-click="vmDelete.close()">@TextosPaginas.Nao</button>
        </div>
        <div class="modal-footer hidden-lg hidden-md">
            <button type="button" class="btn btn-default btn-lg btn-block" ng-click="vmDelete.back()">@TextosPaginas.Voltar</button>
        </div>
    </script>
        

</section><!-- /.content -->