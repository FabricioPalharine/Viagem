<section class="content-header">
    <h1>
        @TextosPaginas.Home_Posicao
        <small>@TextosPaginas.Posicao_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="Posicao({filtro:itemPosicaoEdit.filtroConsulta})">@TextosPaginas.Home_Posicao</a></li>
        <li class="active">@TextosPaginas.Posicao_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemPosicaoEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemPosicaoEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemPosicaoEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemPosicaoEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemPosicaoEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemPosicaoEdit.CamposInvalidos.IdentificadorViagem}">
					<label>@TextosPaginas.Posicao_IdentificadorViagem</label>
					<select ng-model="itemPosicaoEdit.itemViagem" class="form-control" ng-options="obj.Nome for obj in itemPosicaoEdit.ListaViagem track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemPosicaoEdit.CamposInvalidos.IdentificadorUsuario}">
					<label>@TextosPaginas.Posicao_IdentificadorUsuario</label>
					<select ng-model="itemPosicaoEdit.itemUsuario" class="form-control" ng-options="obj.EMail for obj in itemPosicaoEdit.ListaUsuario track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemPosicaoEdit.CamposInvalidos.Latitude}">
					<label>@TextosPaginas.Posicao_Latitude</label>
					<input type="text" class="form-control" ng-model="itemPosicaoEdit.itemPosicao.Latitude"   empty-to-null decimal-input="{digits:8, integerDigits:4}">
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemPosicaoEdit.CamposInvalidos.Longitude}">
					<label>@TextosPaginas.Posicao_Longitude</label>
					<input type="text" class="form-control" ng-model="itemPosicaoEdit.itemPosicao.Longitude"   empty-to-null decimal-input="{digits:8, integerDigits:4}">
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemPosicaoEdit.CamposInvalidos.DataGMT}">
					<label>@TextosPaginas.Posicao_DataGMT</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemPosicaoEdit.itemPosicao.DataGMT" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemPosicaoEdit.itemPosicao.DataGMT"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemPosicaoEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemPosicaoEdit.CamposInvalidos.Velocidade}">
					<label>@TextosPaginas.Posicao_Velocidade</label>
					<input type="text" class="form-control" ng-model="itemPosicaoEdit.itemPosicao.Velocidade"   empty-to-null decimal-input="{digits:2, integerDigits:6}">
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemPosicaoEdit.CamposInvalidos.DataLocal}">
					<label>@TextosPaginas.Posicao_DataLocal</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemPosicaoEdit.itemPosicao.DataLocal" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemPosicaoEdit.itemPosicao.DataLocal"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemPosicaoEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="Posicao({filtro:itemPosicaoEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->