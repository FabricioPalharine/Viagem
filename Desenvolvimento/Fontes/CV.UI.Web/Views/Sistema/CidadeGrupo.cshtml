<section class="content-header">
    <h1>
        @TextosPaginas.Home_CidadeGrupo

    </h1>
    <ol class="breadcrumb">

        <li>@TextosPaginas.Home_Menu</li>
        <li class="active">@TextosPaginas.Home_CidadeGrupo</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemCidadeGrupo.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemCidadeGrupo.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemCidadeGrupo.filtraDado()" >
           
            <div class="box-footer">
                <a role="button" class="btn btn-primary " title="@TextosPaginas.Adicionar" ng-click="itemCidadeGrupo.Incluir()">
                    <span class="fa fa-plus" aria-hidden="true"></span>
                </a>
                

            </div>
        </form>
    </div><!-- /.box -->



    <div class="box" >
        <div class="overlay" ng-show="itemCidadeGrupo.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>
        <div class="box-body table-responsive">
            <div class="gridStyle" ui-grid="itemCidadeGrupo.gridOptions"></div>


        </div>
    </div>

 

    <script type="text/ng-template" id="modalDelete.html">
        <div class="modal-header">
            <span>@TextosPaginas.ConfirmaExclusao</span>
        </div>
        <div class="modal-body">
            <button type="button" class="btn btn-info btn-lg btn-block" ng-click="vmDelete.delete()">@TextosPaginas.Sim</button>
            <button type="button" class="btn btn-default btn-lg btn-block" ng-click="vmDelete.close()">@TextosPaginas.Nao</button>
        </div>
        <div class="modal-footer hidden-lg hidden-md">
            <button type="button" class="btn btn-default btn-lg btn-block" ng-click="vmDelete.back()">@TextosPaginas.Voltar</button>
        </div>
    </script>


    <script type="text/ng-template" id="BotoesGridTemplate.html">

        <div class="ngCellText hidden-xs">
			<button type="button" class="btn btn-primary small" title="@TextosPaginas.Editar"ng-click="grid.appScope.Editar(row.entity)"><span class="fa fa-pencil" aria-hidden="true"></span></button>
			<button type="button" class="btn btn-danger small" title="@TextosPaginas.Excluir" ng-click="grid.appScope.askDelete(row.entity, $index)"><span class="fa fa-trash" aria-hidden="true"></span></button>

        </div>


    </script>

</section><!-- /.content -->