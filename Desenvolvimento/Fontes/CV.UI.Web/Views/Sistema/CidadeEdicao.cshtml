<section class="content-header">
    <h1>
        @TextosPaginas.Home_Cidade
        <small>@TextosPaginas.Cidade_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="Cidade({filtro:itemCidadeEdit.filtroConsulta})">@TextosPaginas.Home_Cidade</a></li>
        <li class="active">@TextosPaginas.Cidade_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemCidadeEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemCidadeEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemCidadeEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemCidadeEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemCidadeEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemCidadeEdit.CamposInvalidos.IdentificadorPais}">
					<label>@TextosPaginas.Cidade_IdentificadorPais</label>
					<select ng-model="itemCidadeEdit.itemPais" class="form-control" ng-options="obj.Sigla for obj in itemCidadeEdit.ListaPais track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemCidadeEdit.CamposInvalidos.Nome}">
					<label>@TextosPaginas.Cidade_Nome</label>
					<input type="text" class="form-control" ng-model="itemCidadeEdit.itemCidade.Nome" maxlength="100"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemCidadeEdit.CamposInvalidos.Estado}">
					<label>@TextosPaginas.Cidade_Estado</label>
					<input type="text" class="form-control" ng-model="itemCidadeEdit.itemCidade.Estado" maxlength="100"  empty-to-null >
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="Cidade({filtro:itemCidadeEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->