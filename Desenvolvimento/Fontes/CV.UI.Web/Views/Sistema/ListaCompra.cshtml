<section class="content-header">
    <h1>
        @TextosPaginas.Home_ListaCompra

    </h1>
    <ol class="breadcrumb">

        <li>@TextosPaginas.Home_Menu</li>
        <li class="active">@TextosPaginas.Home_ListaCompra</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemListaCompra.load()">
    <!-- Default box -->
    <!-- general form elements -->

    <ul class="nav nav-tabs">
        <li ng-class="{'active': !itemListaCompra.AbrirRequisicaoCompra}"><a data-toggle="tab" data-target="#listaCompra" style="cursor:pointer" ng-click="itemListaCompra.AtualizarGrid()">@TextosPaginas.Home_ListaCompra</a></li>
        <li ng-class="{'active': itemListaCompra.AbrirRequisicaoCompra}"><a data-toggle="tab" data-target="#requisicoes" style="cursor:pointer" ng-click="itemListaCompra.AtualizarGrid()">@TextosPaginas.Home_PedidosCompra</a></li>
    </ul>

    <div class="tab-content">
        <div id="listaCompra" class="tab-pane fade in " ng-class="{'active': !itemListaCompra.AbrirRequisicaoCompra}">
            <div class="box box-primary">
                <div class="overlay" ng-show="itemListaCompra.loading">
                    <i class="fa fa-refresh fa-spin text-gray"></i>
                </div> 
                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>@TextosPaginas.ListaCompra_Destinatario</label>
                            <input type="text" class="form-control" ng-model="itemListaCompra.filtro.Nome" maxlength="50" empty-to-null>
                        </div>
                        <div class="form-group col-md-6">
                            <label>@TextosPaginas.ListaCompra_Marca</label>
                            <input type="text" class="form-control" ng-model="itemListaCompra.filtro.Tipo" maxlength="50" empty-to-null>
                        </div>
                        <div class="form-group col-md-6">
                            <label>@TextosPaginas.ListaCompra_Descricao</label>
                            <input type="text" class="form-control" ng-model="itemListaCompra.filtro.Comentario" maxlength="50" empty-to-null>
                        </div>
                        <div class="form-group col-md-6">
                            <label>@TextosPaginas.Atracao_Situacao</label>

                            <div class="form-inline">

                                <label class="radio">
                                    <input type="radio" class="radio-inline" name="radSituacao" value="3" ng-model="itemListaCompra.filtro.Situacao" />

                                    <label style="padding-top:5px">

                                        @TextosPaginas.ListaCompra_Comprado
                                    </label>
                                </label>
                                <label class="radio" style="margin-left:10px">
                                    <input type="radio" class="radio-inline" name="radSituacao" value="1" ng-model="itemListaCompra.filtro.Situacao" /><label>
                                        @TextosPaginas.ListaCompra_Pendente
                                    </label>
                                </label>
                                <label class="radio" style="margin-left:10px">
                                    <input type="radio" class="radio-inline" name="radSituacao" value="-1" ng-model="itemListaCompra.filtro.Situacao" />
                                    <label>
                                        @TextosPaginas.Hotel_Todos
                                    </label>
                                </label>
                            </div>

                        </div>


                    </div>
                </div><!-- /.box-body -->           
                <div class="box-footer">
                    <a role="button" class="btn btn-primary " title="@TextosPaginas.Adicionar" ng-click="itemListaCompra.AdicionarListaCompra()">
                        <span class="fa fa-plus" aria-hidden="true"></span>
                    </a>
                    <button type="submit" class="btn btn-primary  pull-right" ng-click="itemListaCompra.filtraDado()">
                        <span class="fa fa-search" aria-hidden="true"></span> @TextosPaginas.Pesquisar
                    </button>
                </div>

                <div class="box">
                    <div class="overlay" ng-show="itemListaCompra.loading">
                        <i class="fa fa-refresh fa-spin text-gray"></i>
                    </div>
                    <div class="box-body table-responsive">
                        <div class="gridStyle" ui-grid="itemListaCompra.gridOptions" ></div>

                    </div>
                </div>

            </div><!-- /.box -->
        </div>

        <div id="requisicoes" class="tab-pane fade in" ng-class="{'active': itemListaCompra.AbrirAprovacao}">
            <div class="box box-primary">
                <div class="overlay" ng-show="itemListaCompra.loadingPedido">
                    <i class="fa fa-refresh fa-spin text-gray"></i>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>@TextosPaginas.ListaCompra_Requisitante</label>
                            <select ng-model="itemListaCompra.itemUsuario" class="form-control" ng-options="obj.Nome for obj in itemListaCompra.ListaUsuario track by obj.Identificador">
                                <option value="">@TextosPaginas.Selecione</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>@TextosPaginas.ListaCompra_Marca</label>
                            <input type="text" class="form-control" ng-model="itemListaCompra.filtroPedido.Tipo" maxlength="50" empty-to-null>
                        </div>
                        <div class="form-group col-md-6">
                            <label>@TextosPaginas.ListaCompra_Descricao</label>
                            <input type="text" class="form-control" ng-model="itemListaCompra.filtroPedido.Comentario" maxlength="50" empty-to-null>
                        </div>
                        <div class="form-group col-md-6">
                            <label>@TextosPaginas.Atracao_Situacao</label>

                            <div class="form-inline">

                                <label class="radio">
                                    <input type="radio" class="radio-inline" name="radSituacao" value="3" ng-model="itemListaCompra.filtroPedido.Situacao" />

                                    <label style="padding-top:5px">

                                        @TextosPaginas.ListaCompra_Comprado
                                    </label>

                                </label>
                                <label class="radio" style="margin-left:10px">
                                    <input type="radio" class="radio-inline" name="radSituacaoPedido" value="1" ng-model="itemListaCompra.filtroPedido.Situacao" /><label>
                                        @TextosPaginas.ListaCompra_Pendente
                                    </label>
                                </label>
                                <label class="radio" style="margin-left:10px">
                                    <input type="radio" class="radio-inline" name="radSituacaoPedido" value="2" ng-model="itemListaCompra.filtroPedido.Situacao" /><label>
                                        @TextosPaginas.ListaCompra_Ignorado
                                    </label>
                                </label>
                                <label class="radio" style="margin-left:10px">
                                    <input type="radio" class="radio-inline" name="radSituacaoPedido" value="-1" ng-model="itemListaCompra.filtroPedido.Situacao" />
                                    <label>
                                        @TextosPaginas.Hotel_Todos
                                    </label>
                                </label>
                            </div>

                        </div>


                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer">

                    <button type="submit" class="btn btn-primary  pull-right" ng-click="itemListaCompra.filtraDadoPedido()">
                        <span class="fa fa-search" aria-hidden="true"></span> @TextosPaginas.Pesquisar
                    </button>
                </div>

                <div class="box">
                    <div class="overlay" ng-show="itemListaCompra.loadingPedido">
                        <i class="fa fa-refresh fa-spin text-gray"></i>
                    </div>
                    <div class="box-body table-responsive">
                        <div class="gridStyle" ui-grid="itemListaCompra.gridOptionsPedidos"></div>

                    </div>
                </div>
                </div>
            </div>
   </div>

    <script type="text/ng-template" id="modalDelete.html">
        <div class="modal-header">
            <span>{{vmDelete.MensagemConfirmacao}}</span>
        </div>
        <div class="modal-body">
            <button type="button" class="btn btn-info btn-lg btn-block" ng-click="vmDelete.confirmar()">{{vmDelete.TextoBotaoOK}}</button>
            <button type="button" class="btn btn-default btn-lg btn-block" ng-click="vmDelete.close()">{{vmDelete.TextoBotaoCancel}}</button>
        </div>
    </script>


    <script type="text/ng-template" id="BotoesGridTemplate.html">

        <div class="ngCellText hidden-xs">
            <button type="button"  class="btn btn-primary small" title="@TextosPaginas.Editar" ng-click="grid.appScope.EditarListaCompra(row.entity)"><span class="fa fa-pencil" aria-hidden="true"></span></button>
            <button type="button"  class="btn btn-danger small" title="@TextosPaginas.Excluir" ng-click="grid.appScope.VerificarExclusao(row.entity)"><span class="fa fa-trash" aria-hidden="true"></span></button>

        </div>


    </script>

    <script type="text/ng-template" id="BotoesGridExibicao.html">

        <div class="ngCellText hidden-xs">
            <button type="button" ng-if="row.entity.Status == 1" class="btn btn-danger small" title="@TextosPaginas.Ignorar" ng-click="grid.appScope.VerificarIgnorar(row.entity)"><span class="fa fa-close" aria-hidden="true"></span></button>

        </div>


    </script>
</section><!-- /.content -->