<section class="content-header">
    <h1>
        @TextosPaginas.Home_LocaisVisitados
    </h1>
    <ol class="breadcrumb">
        <li>@TextosPaginas.Home_Menu</li>
        <li>@TextosPaginas.Home_Consultas</li>
        <li><a ui-sref="ConsultarLocaisVisitados({filtro:itemExtratoMoeda.filtroConsulta})"> @TextosPaginas.Home_LocaisVisitados</a></li>
        <li class="active">{{itemExtratoMoeda.Item.Nome}}</li>
    </ol>
</section>
<!-- Main content -->
<section class="content" ng-init="itemExtratoMoeda.load()">
    <div class="box">
        <div class="overlay" ng-show="itemExtratoMoeda.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>
        <div class="box-header">
            <div class="row">
                <div class="col-md-3">
                    <img ng-src="{{itemExtratoMoeda.RetornarURLMap(itemExtratoMoeda.Item) }}" class="img-responsive" />

                </div>
                <div class="col-md-9">
                    <h3><b>{{itemExtratoMoeda.Item.Nome}}</b></h3><br />
                    {{itemExtratoMoeda.Item.Endereco}}

                </div>
            </div>


        </div>
        <div class="box-body">

            <div class="box">
                <div class="overlay" ng-show="itemExtratoMoeda.loading">
                    <i class="fa fa-refresh fa-spin text-gray"></i>
                </div>
                <div class="box-header">
                    @TextosPaginas.LocaisVisitados_Compras
                </div>
                <div class="box-body">
                    <div class="panel" ng-repeat="item in itemExtratoMoeda.ListaGastos">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <b> @TextosPaginas.LocaisVisitados_Usuario</b><br />
                                    {{item.NomeUsuario}}
                                </div>
                                <div class="col-md-3">
                                    <b>@TextosPaginas.LocaisVisitados_Data</b><br />
                                    {{item.Data | date:'dd/MM/yyyy HH:mm'}}
                                </div>
                                <div class="col-md-3" ng-if="account.VerCustos()">
                                    <b> @TextosPaginas.LocaisVisitados_Valor</b><br />
                                    {{item.MoedaSigla}}&nbsp;{{item.Valor | number:2}}
                                </div>
                                <div class="col-md-12">
                                    {{item.Descricao}}
                                </div>
                            </div>

                        </div>
                        <div class="panel-footer" ng-if="item.Itens.length > 0">
                            <div><b>@TextosPaginas.LocaisVisitados_Itens</b></div>
                            <div class="row">
                                <div class="col-xs-4"><b>@TextosPaginas.LocaisVisitados_Marca</b></div>
                                <div class="col-xs-5"><b>@TextosPaginas.LocaisVisitados_Descricao</b></div>
                                <div class="col-xs-3" ng-if="account.VerCustos()"><b>@TextosPaginas.LocaisVisitados_Valor</b></div>

                            </div>
                            <div class="row" ng-repeat="itemCompra in item.Itens">
                                <div class="col-xs-4">{{itemCompra.Marca}}</div>
                                <div class="col-xs-5">{{itemCompra.Descricao}}</div>
                                <div class="col-xs-3" ng-if="account.VerCustos()">{{itemCompra.Valor | number:2}}</div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="box-footer">
            <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ng-click="itemExtratoMoeda.Voltar()">
                <span class="fa fa-arrow-left" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</section><!-- /.content -->