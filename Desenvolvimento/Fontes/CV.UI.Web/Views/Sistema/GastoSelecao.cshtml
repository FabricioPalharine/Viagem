<div class="modal-header">
    <span>@TextosPaginas.Gasto_SelecionarGasto</span>
</div>
<div class="modal-body">
    <div class="box collapsed-box">
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fa fa-filter"></i>&nbsp;@TextosPaginas.Foto_Filtros</h3>

            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-plus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Gasto_IdentificadorUsuario</label>
                    <select ng-model="vmSelecaoGasto.itemUsuario" class="form-control" ng-options="obj.Nome for obj in vmSelecaoGasto.ListaParticipante track by obj.Identificador">
                        <option value="">@TextosPaginas.Selecione</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Gasto_Descricao</label>
                    <input type="text" class="form-control" ng-model="vmSelecaoGasto.filtro.Nome" maxlength="200" empty-to-null>
                </div>
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Foto_DataDe</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="vmSelecaoGasto.filtro.DataInicioDe" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="vmSelecaoGasto.filtro.DataInicioDe"
                                            data-datetimepicker-config="{  minView:'day' , langCode:vmSelecaoGasto.Idioma()  }" />
                        </ul>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Foto_DataAte</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="vmSelecaoGasto.filtro.DataInicioAte" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="vmSelecaoGasto.filtro.DataInicioAte"
                                            data-datetimepicker-config="{  minView:'day' , langCode:vmSelecaoGasto.Idioma()  }" />
                        </ul>
                    </div>
                </div>
            </div>

        </div><!-- /.box-body -->
        <div class="box-footer">
          
            <button class="btn btn-primary  pull-right" ng-click="vmSelecaoGasto.filtraDado()">
                <span class="fa fa-search" aria-hidden="true"></span> @TextosPaginas.Pesquisar
            </button>

        </div>
    </div>

    <div class="box box-primary">
        <table class="table-condensed " style="width:100%; ">
            <thead>
                <tr>
                    <th class="col-xs-3">
                        @TextosPaginas.Gasto_Descricao
                    </th>
                    <th class="col-xs-2">
                        @TextosPaginas.Gasto_Data
                    </th>
                    <th class="col-xs-3">
                        @TextosPaginas.Gasto_IdentificadorUsuario
                    </th>
                    <th class="col-xs-1">
                        @TextosPaginas.Gasto_Moeda
                    </th>
                    <th class="col-xs-2">
                        @TextosPaginas.Gasto_Valor
                    </th>

                    <th class="col-xs-1">

                    </th>
                </tr>
            </thead>
            <tr ng-repeat='itemCusto in vmSelecaoGasto.ListaGastos' ng-if="!itemCusto.DataExclusao">
                <td>
                    {{itemCusto.Descricao}}
                </td>
                <td>
                    {{itemCusto.Data | date:'dd/MM/yyyy'}}
                </td>
                <td>
                    {{itemCusto.ItemUsuario.Nome}}
                </td>
                <td>
                    {{itemCusto.MoedaSigla}}
                </td>
                <td>
                    {{itemCusto.Valor | number:'2'}}
                </td>
                <td>
                    <button type="button" class="btn btn-primary small" ng-click="vmSelecaoGasto.SelecionarCusto( itemCusto)"><span class="fa fa-check" aria-hidden="true"></span></button>

                </td>
            </tr>
        </table>
    </div>
</div>