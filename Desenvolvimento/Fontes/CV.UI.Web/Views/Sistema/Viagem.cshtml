<section class="content-header">
    <h1>
        @TextosPaginas.Home_Viagem

    </h1>
    <ol class="breadcrumb">

        <li>@TextosPaginas.Home_Menu</li>
        <li class="active">@TextosPaginas.Home_Viagem</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemViagem.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemViagem.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemViagem.filtraDado()">
            <div class="box-body">
                <div class="row">



                </div>


            </div><!-- /.box-body -->
            <div class="box-footer">
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Viagem_Amigo</label>
                    <select ng-model="itemViagem.itemParticipante" class="form-control" ng-options="obj.Nome for obj in itemViagem.ListaUsuario track by obj.Identificador">
                        <option value="">@TextosPaginas.Selecione</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Viagem_Nome</label>
                    <input type="text" class="form-control" ng-model="itemViagem.filtro.Nome" maxlength="200" empty-to-null>
                </div>
                <div class="form-group col-md-3">
                    <label>@TextosPaginas.Viagem_DataInicioDe</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="itemViagem.filtro.DataInicioDe" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="itemViagem.filtro.DataInicioDe"
                                            data-datetimepicker-config="{  minView:'day' , langCode:itemViagem.Idioma()  }" />
                        </ul>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label>@TextosPaginas.Viagem_DataInicioAte</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="itemViagem.filtro.DataInicioAte" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="itemViagem.filtro.DataInicioAte"
                                            data-datetimepicker-config="{  minView:'day' , langCode:itemViagem.Idioma()  }" />
                        </ul>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label>@TextosPaginas.Viagem_DataFimDe</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="itemViagem.filtro.DataFimDe" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="itemViagem.filtro.DataFimDe"
                                            data-datetimepicker-config="{  minView:'day' , langCode:itemViagem.Idioma()  }" />
                        </ul>
                    </div>
                </div>   
                <div class="form-group col-md-3">
                    <label>@TextosPaginas.Viagem_DataFimAte</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="itemViagem.filtro.DataFimAte" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="itemViagem.filtro.DataFimAte"
                                            data-datetimepicker-config="{  minView:'day' , langCode:itemViagem.Idioma()  }" />
                        </ul>
                    </div>
                </div>  
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Viagem_Situacao</label>

                    <div class="form-inline">

                        <label class="radio">
                            <input type="radio" class="radio-inline" name="radSituacao" value="true" ng-model="itemViagem.filtro.Situacao" />

                            <label style="padding-top:5px">

                                @TextosPaginas.Viagem_Aberto
                            </label>
                        </label>
                        <label class="radio" style="margin-left:10px">
                            <input type="radio" class="radio-inline" name="radSituacao" value="false" ng-model="itemViagem.filtro.Situacao" /><label>
                                @TextosPaginas.Viagem_Fechado
                            </label>
                        </label>
                        <label class="radio" style="margin-left:10px">
                            <input type="radio" class="radio-inline" name="radSituacao" value="" ng-model="itemViagem.filtro.Situacao" />
                            <label>
                                @TextosPaginas.Viagem_Todas
                            </label>
                        </label>

                    </div>

                </div>
                    <button type="submit" class="btn btn-primary  pull-right">
                        <span class="fa fa-search" aria-hidden="true"></span> @TextosPaginas.Pesquisar
                    </button>

                </div>
        </form>
    </div><!-- /.box -->



    <div class="box">
        <div class="overlay" ng-show="itemViagem.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>
        <div class="box-body table-responsive">
            <div class="gridStyle" ui-grid="itemViagem.gridOptions" ></div>


        </div>
    </div>


    <script type="text/ng-template" id="BotoesGridTemplate.html">

        <div class="ngCellText hidden-xs">
            <button type="button" class="btn btn-primary small" title="@TextosPaginas.Selecionar" ng-click="grid.appScope.SelecionarViagem(row.entity)"><span class="fa fa-check" aria-hidden="true"></span></button>

        </div>


    </script>

    <script type="text/ng-template" id="ListaParticipantes.html">

        <ul>
            <li ng-repeat="usuario in row.entity.Participantes" >{{usuario.ItemUsuario.Nome}}</li>
        </ul>


    </script>

</section><!-- /.content -->