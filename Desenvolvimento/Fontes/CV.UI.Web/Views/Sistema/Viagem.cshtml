<section class="content-header">
    <h1>
        @TextosPaginas.Home_Viagem

    </h1>
    <ol class="breadcrumb">

        <li>@TextosPaginas.Home_Menu</li>
        <li class="active">@TextosPaginas.Home_Viagem</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemViagem.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemViagem.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemViagem.filtraDado()">
            <div class="box-body">
                <div class="row">



                </div>


            </div><!-- /.box-body -->
            <div class="box-footer">
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Viagem_Amigo</label>
                    <select ng-model="itemViagem.itemParticipante" class="form-control" ng-options="obj.Nome for obj in itemViagem.ListaUsuario track by obj.Identificador">
                        <option value="">@TextosPaginas.Selecione</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Viagem_Nome</label>
                    <input type="text" class="form-control" ng-model="itemViagem.filtro.Nome" maxlength="200" empty-to-null>
                </div>
                <div class="form-group col-md-3">
                    <label>@TextosPaginas.Viagem_DataInicioDe</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="itemViagem.filtro.DataInicioDe" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="itemViagem.filtro.DataInicioDe"
                                            data-datetimepicker-config="{  minView:'day' , langCode:itemViagem.Idioma()  }" />
                        </ul>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label>@TextosPaginas.Viagem_DataInicioAte</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="itemViagem.filtro.DataInicioAte" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="itemViagem.filtro.DataInicioAte"
                                            data-datetimepicker-config="{  minView:'day' , langCode:itemViagem.Idioma()  }" />
                        </ul>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label>@TextosPaginas.Viagem_DataFimDe</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="itemViagem.filtro.DataFimDe" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="itemViagem.filtro.DataFimDe"
                                            data-datetimepicker-config="{  minView:'day' , langCode:itemViagem.Idioma()  }" />
                        </ul>
                    </div>
                </div>   
                <div class="form-group col-md-3">
                    <label>@TextosPaginas.Viagem_DataFimAte</label>
                    <div class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">
                            <div class="input-group">
                                <input date-input ng-model="itemViagem.filtro.DataFimAte" class="form-control" input-mask="{mask: 'd/m/y'}"
                                       datapattern="dd/MM/yyyy">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <datetimepicker data-ng-model="itemViagem.filtro.DataFimAte"
                                            data-datetimepicker-config="{  minView:'day' , langCode:itemViagem.Idioma()  }" />
                        </ul>
                    </div>
                </div>  
                <div class="form-group col-md-6">
                    <label>@TextosPaginas.Viagem_Situacao</label>

                    <div class="form-inline">

                        <label class="radio">
                            <input type="radio" class="radio-inline" name="radSituacao" value="true" ng-model="itemViagem.filtro.Situacao" />

                            <label style="padding-top:5px">

                                @TextosPaginas.Viagem_Aberto
                            </label>
                        </label>
                        <label class="radio" style="margin-left:10px">
                            <input type="radio" class="radio-inline" name="radSituacao" value="false" ng-model="itemViagem.filtro.Situacao" /><label>
                                @TextosPaginas.Viagem_Fechado
                            </label>
                        </label>
                        <label class="radio" style="margin-left:10px">
                            <input type="radio" class="radio-inline" name="radSituacao" value="" ng-model="itemViagem.filtro.Situacao" />
                            <label>
                                @TextosPaginas.Viagem_Todas
                            </label>
                        </label>

                    </div>

                </div>
                    <button type="submit" class="btn btn-primary  pull-right">
                        <span class="fa fa-search" aria-hidden="true"></span> @TextosPaginas.Pesquisar
                    </button>

                </div>
        </form>
    </div><!-- /.box -->



    <div class="box">
        <div class="overlay" ng-show="itemViagem.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>
        <div class="box-body table-responsive">
            <div class="gridStyle" ui-grid="itemViagem.gridOptions" ui-grid-pagination></div>


        </div>
    </div>

    <script type="text/ng-template" id="NewFooterTemplate.html">

        <div role="contentinfo" class="ui-grid-pager-panel" ui-grid-pager ng-show="grid.options.enablePaginationControls">

            <div role="navigation" class="ui-grid-pager-container">
                <div role="menubar" class="ui-grid-pager-control">
                    <button type="button" role="menuitem" class="ui-grid-pager-first" ui-grid-one-bind-title="aria.pageToFirst" ui-grid-one-bind-aria-label="aria.pageToFirst" ng-class="{'btn':true, 'btn-primary':true}" ng-click="pageFirstPageClick()" ng-disabled="cantPageBackward()">
                        <div ng-class="grid.isRTL() ? 'last-triangle' : 'first-triangle'"><div ng-class="grid.isRTL() ? 'last-bar-rtl' : 'first-bar'"></div></div>
                    </button>
                    <button type="button" role="menuitem" class="ui-grid-pager-previous  btn btn-primary" ui-grid-one-bind-title="aria.pageBack" ui-grid-one-bind-aria-label="aria.pageBack" ng-click="pagePreviousPageClick()" ng-disabled="cantPageBackward()"><div ng-class="grid.isRTL() ? 'last-triangle prev-triangle' : 'first-triangle prev-triangle'"></div></button>
                    <input type="number" ui-grid-one-bind-title="aria.pageSelected" ui-grid-one-bind-aria-label="aria.pageSelected" class="ui-grid-pager-control-input" ng-model="grid.options.paginationCurrentPage" min="1" max="{{ paginationApi.getTotalPages() }}" required> <span class="ui-grid-pager-max-pages-number" ng-show="paginationApi.getTotalPages() > 0"><abbr ui-grid-one-bind-title="paginationOf">/</abbr> {{ paginationApi.getTotalPages() }}</span>
                    <button type="button" role="menuitem" class="ui-grid-pager-next  btn btn-primary" ui-grid-one-bind-title="aria.pageForward" ui-grid-one-bind-aria-label="aria.pageForward" ng-click="pageNextPageClick()" ng-disabled="cantPageForward()"><div ng-class="grid.isRTL() ? 'first-triangle next-triangle' : 'last-triangle next-triangle'"></div></button>
                    <button type="button" role="menuitem" class="ui-grid-pager-last  btn btn-primary" ui-grid-one-bind-title="aria.pageToLast" ui-grid-one-bind-aria-label="aria.pageToLast" ng-click="pageLastPageClick()" ng-disabled="cantPageToLast()"><div ng-class="grid.isRTL() ? 'first-triangle' : 'last-triangle'"><div ng-class="grid.isRTL() ? 'first-bar-rtl' : 'last-bar'"></div></div></button>
                </div>
            </div>
            <div class="ui-grid-pager-count-container"><div class="ui-grid-pager-count"><span ng-show="grid.options.totalItems > 0">{{showingLow}} <abbr ui-grid-one-bind-title="paginationThrough">-</abbr> {{showingHigh}} {{paginationOf}} {{grid.options.totalItems}} {{totalItemsLabel}}</span></div></div>
        </div>
    </script>


    <script type="text/ng-template" id="BotoesGridTemplate.html">

        <div class="ngCellText hidden-xs">
            <button type="button" class="btn btn-primary small" title="@TextosPaginas.Selecionar" ng-click="grid.appScope.SelecionarViagem(row.entity)"><span class="fa fa-check" aria-hidden="true"></span></button>

        </div>


    </script>

    <script type="text/ng-template" id="ListaParticipantes.html">

        <ul>
            <li ng-repeat="usuario in row.entity.Participantes" >{{usuario.ItemUsuario.Nome}}</li>
        </ul>


    </script>

</section><!-- /.content -->