<section class="content-header">
    <h1>
        @TextosPaginas.Home_Pais
        <small>@TextosPaginas.Pais_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="Pais({filtro:itemPaisEdit.filtroConsulta})">@TextosPaginas.Home_Pais</a></li>
        <li class="active">@TextosPaginas.Pais_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemPaisEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemPaisEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemPaisEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemPaisEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemPaisEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemPaisEdit.CamposInvalidos.Sigla}">
					<label>@TextosPaginas.Pais_Sigla</label>
					<input type="text" class="form-control" ng-model="itemPaisEdit.itemPais.Sigla" maxlength="3"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemPaisEdit.CamposInvalidos.Nome}">
					<label>@TextosPaginas.Pais_Nome</label>
					<input type="text" class="form-control" ng-model="itemPaisEdit.itemPais.Nome" maxlength="50"  empty-to-null >
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="Pais({filtro:itemPaisEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->