<div class="modal-header">
    <span>@TextosPaginas.Carro_AdicionaReabastecimento</span>
</div>
<div class="modal-body" ng-init="itemReabastecimentoEdit.load()">
    <div class="box box-primary">
        <div class="overlay" ng-show="itemReabastecimentoEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <div class="box-body">

            <div class="row" ng-show="itemReabastecimentoEdit.messages.length > 0">
                <div class="col-md-12">
                    <div class="callout callout-danger">
                        <h4>@TextosPaginas.Geral_ValidarErros</h4>
                        <ul>
                            <li ng-repeat="erro in itemReabastecimentoEdit.messages">
                                <span ng-bind="erro.Mensagem"></span>
                            </li>
                        </ul>

                    </div>
                </div>

            </div>
            <div class="row">


                <div class="col-md-6 " ng-class="{ 'has-error':itemReabastecimentoEdit.CamposInvalidos.Litro}">
                    <label>@TextosPaginas.Reabastecimento_Unidade</label>
                    <div class="form-inline">

                        <label class="radio">
                            <input type="radio" class="radio-inline" name="radUnidade" ng-value="true" ng-model="itemReabastecimentoEdit.itemReabastecimento.Litro" />

                            <label style="padding-top:5px">

                                @TextosPaginas.Reabastecimento_Litro
                            </label>
                        </label>
                        <label class="radio" style="margin-left:10px">
                            <input type="radio" class="radio-inline" name="radUnidade"  ng-value="false"  ng-model="itemReabastecimentoEdit.itemReabastecimento.Litro" /><label>
                                @TextosPaginas.Reabastecimento_Galao
                            </label>
                        </label>
                    </div>
                </div>

                <div class="form-group col-md-6" ng-class="{ 'has-error':itemReabastecimentoEdit.CamposInvalidos.QuantidadeReabastecida}">
                    <label>@TextosPaginas.Reabastecimento_QuantidadeReabastecida</label>
                    <input type="text" class="form-control" ng-model="itemReabastecimentoEdit.itemReabastecimento.QuantidadeReabastecida" empty-to-null decimal-input="{digits:2, integerDigits:4}">
                </div>



            </div>

            <div ng-controller="GastoEditCtrl as itemGastoEdit" ng-inject="{'$uibModalInstance': null, Referencias: null, EscopoAtualizacao: itemReabastecimentoEdit}" ng-init="itemGastoEdit.ajustaItem(itemReabastecimentoEdit.itemCusto)">
                <div ng-include="'Sistema/GastoEdicao'" ng-init="itemGastoEdit.load()">

                </div>
            </div>

        </div><!-- /.box-body -->

    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" ng-click="itemReabastecimentoEdit.abrirMapa()">
        <span class="fa fa-map-marker" aria-hidden="true">@TextosPaginas.Posicao</span>
    </button>
    <button type="button" class="btn btn-primary" ng-click="itemReabastecimentoEdit.close()">
        <span class="fa fa-close" aria-hidden="true">@TextosPaginas.Cancelar</span>
    </button>

    <button type="button" class="btn btn-primary  pull-right" ng-click="itemReabastecimentoEdit.salvar()">
        <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
    </button>
</div>