<div class="modal-header">
    <span>@TextosPaginas.Sugestao_Manutencao</span>
</div>
<!-- Main content -->
<div class="modal-body" ng-init="itemSugestaoEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemSugestaoEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" name="form" novalidate>
            <div class="box-body">

                <div class="row" ng-show="itemSugestaoEdit.messages.length > 0">
                    <div class="col-md-12">
                        <div class="callout callout-danger">
                            <h4>@TextosPaginas.Geral_ValidarErros</h4>
                            <ul>
                                <li ng-repeat="erro in itemSugestaoEdit.messages">
                                    <span ng-bind="erro.Mensagem"></span>
                                </li>
                            </ul>

                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-6" ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.Local}">
                        <label>@TextosPaginas.Sugestao_Local</label>
                        <input type="text" class="form-control" ng-model="itemSugestaoEdit.itemSugestao.Local" maxlength="100" empty-to-null ng-if="(!itemSugestaoEdit.itemSugestao.Latitude || !itemSugestaoEdit.itemSugestao.Longitude) && !itemSugestaoEdit.position.lat ">
                        <input ng-if="(itemSugestaoEdit.itemSugestao.Latitude && itemSugestaoEdit.itemSugestao.Longitude) || itemSugestaoEdit.position.lat" type="text" ng-model="itemSugestaoEdit.itemSugestao.Local" uib-typeahead="address.name for address in itemSugestaoEdit.CarregarDadosGoogleApi($viewValue) " typeahead-loading="itemSugestaoEdit.loadingLocations" class="form-control" typeahead-on-select="itemSugestaoEdit.SelecionarPlacesGoogle($item, $model, $label)">

                    </div>
                    <div class="form-group col-md-6" ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.Tipo}">
                        <label>@TextosPaginas.Sugestao_Tipo</label>
                        <input type="text" class="form-control" ng-model="itemSugestaoEdit.itemSugestao.Tipo" maxlength="50" empty-to-null>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12" ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.Comentario}">
                        <label>@TextosPaginas.Sugestao_Comentario</label>

                        <textarea class="form-control" rows="5" ng-model="itemSugestaoEdit.itemSugestao.Comentario"></textarea>

                    </div>

                </div>

            </div><!-- /.box-body -->

        </form>
    </div><!-- /.box -->





</div><!-- /.content -->

<div class="modal-footer">
    <button type="button" class="btn btn-primary" ng-click="itemSugestaoEdit.close()">
        <span class="fa fa-close" aria-hidden="true">@TextosPaginas.Cancelar</span>
    </button>
    <button type="button" class="btn btn-primary" ng-click="itemSugestaoEdit.abrirMapa()">
        <span class="fa fa-map-marker" aria-hidden="true">@TextosPaginas.Posicao</span>
    </button>
    <button type="button" class="btn btn-primary  pull-right" ng-click="itemSugestaoEdit.save()">
        <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
    </button>

</div>