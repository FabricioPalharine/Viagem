<section class="content-header">
    <h1>
        @TextosPaginas.Home_Sugestao
        <small>@TextosPaginas.Sugestao_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="Sugestao({filtro:itemSugestaoEdit.filtroConsulta})">@TextosPaginas.Home_Sugestao</a></li>
        <li class="active">@TextosPaginas.Sugestao_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemSugestaoEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemSugestaoEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemSugestaoEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemSugestaoEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemSugestaoEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.Local}">
					<label>@TextosPaginas.Sugestao_Local</label>
					<input type="text" class="form-control" ng-model="itemSugestaoEdit.itemSugestao.Local" maxlength="100"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.Latitude}">
					<label>@TextosPaginas.Sugestao_Latitude</label>
					<input type="text" class="form-control" ng-model="itemSugestaoEdit.itemSugestao.Latitude"   empty-to-null decimal-input="{digits:8, integerDigits:4}">
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.Longitude}">
					<label>@TextosPaginas.Sugestao_Longitude</label>
					<input type="text" class="form-control" ng-model="itemSugestaoEdit.itemSugestao.Longitude"   empty-to-null decimal-input="{digits:8, integerDigits:4}">
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.Comentario}">
					<label>@TextosPaginas.Sugestao_Comentario</label>
					<input type="text" class="form-control" ng-model="itemSugestaoEdit.itemSugestao.Comentario" maxlength="50"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.IdentificadorViagem}">
					<label>@TextosPaginas.Sugestao_IdentificadorViagem</label>
					<select ng-model="itemSugestaoEdit.itemViagem" class="form-control" ng-options="obj.Nome for obj in itemSugestaoEdit.ListaViagem track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.IdentificadorUsuario}">
					<label>@TextosPaginas.Sugestao_IdentificadorUsuario</label>
					<select ng-model="itemSugestaoEdit.itemUsuario" class="form-control" ng-options="obj.EMail for obj in itemSugestaoEdit.ListaUsuario track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.IdentificadorCidade}">
					<label>@TextosPaginas.Sugestao_IdentificadorCidade</label>
					<select ng-model="itemSugestaoEdit.itemCidade" class="form-control" ng-options="obj.Nome for obj in itemSugestaoEdit.ListaCidade track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.Lida}">
					<label><input type="checkbox" ng-model="itemSugestaoEdit.itemSugestao.Lida" >@TextosPaginas.Sugestao_Lida</label>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemSugestaoEdit.CamposInvalidos.Tipo}">
					<label>@TextosPaginas.Sugestao_Tipo</label>
					<input type="text" class="form-control" ng-model="itemSugestaoEdit.itemSugestao.Tipo" maxlength="50"  empty-to-null >
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="Sugestao({filtro:itemSugestaoEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->