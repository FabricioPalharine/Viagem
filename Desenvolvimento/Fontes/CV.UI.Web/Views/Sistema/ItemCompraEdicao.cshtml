<div class="modal-header">
    <span>@TextosPaginas.ItemCompra_Manutencao</span>
</div>
<div class="modal-body" ng-init="itemItemCompraEdit.load()">
    <div class="box box-primary">
        <div class="overlay" ng-show="itemItemCompraEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <div class="box-body">

            <div class="row" ng-show="itemItemCompraEdit.messages.length > 0">
                <div class="col-md-12">
                    <div class="callout callout-danger">
                        <h4>@TextosPaginas.Geral_ValidarErros</h4>
                        <ul>
                            <li ng-repeat="erro in itemItemCompraEdit.messages">
                                <span ng-bind="erro.Mensagem"></span>
                            </li>
                        </ul>

                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <label>@TextosPaginas.ItemCompra_ListaCompra</label>
                    <select ng-model="itemItemCompraEdit.itemListaCompra" class="form-control" ng-change="itemItemCompraEdit.TrocarItemCompra()"
                             ng-options="(obj.Marca + ' - '  + obj.Descricao) for obj in itemItemCompraEdit.ListaItensCompra track by obj.Identificador">
                        <option value="">@TextosPaginas.Selecione</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6"  ng-class="{ 'has-error':itemItemCompraEdit.CamposInvalidos.Marca}">
                    <label>@TextosPaginas.ItemCompra_Marca</label>
                    <input type="text" class="form-control" ng-model="itemItemCompraEdit.itemItemCompra.Marca" maxlength="50" empty-to-null>

                </div>
                <div class="col-md-6"  ng-class="{ 'has-error':itemItemCompraEdit.CamposInvalidos.Descricao}">
                    <label>@TextosPaginas.ItemCompra_Descricao</label>
                    <input type="text" class="form-control" ng-model="itemItemCompraEdit.itemItemCompra.Descricao" maxlength="50" empty-to-null>
                </div>

                <div class="form-group col-md-6" ng-class="{ 'has-error':itemItemCompraEdit.CamposInvalidos.Valor}">
                    <label>@TextosPaginas.ItemCompra_Valor</label>
                    <input type="text" class="form-control" ng-model="itemItemCompraEdit.itemItemCompra.Valor" empty-to-null decimal-input="{digits:2, integerDigits:16}">
                </div>

                <div class="form-group col-md-6" >
                    <label>@TextosPaginas.ItemCompra_Destinatario</label>
                    <label><input type="checkbox" ng-model="itemItemCompraEdit.CadastradoAmigo">@TextosPaginas.ItemCompra_CadastradoAmigo</label>
                    <select ng-if="itemItemCompraEdit.CadastradoAmigo" ng-model="itemItemCompraEdit.itemUsuario" class="form-control" ng-options="obj.Nome for obj in itemItemCompraEdit.ListaUsuario track by obj.Identificador">
                        <option value="">@TextosPaginas.Selecione</option>
                    </select>
                    <input ng-if="!itemItemCompraEdit.CadastradoAmigo" type="text" class="form-control" ng-model="itemItemCompraEdit.itemItemCompra.Destinatario" maxlength="50" empty-to-null>

                    </div>
                </div>
                <div class="form-group col-md-6" ng-class="{ 'has-error':itemItemCompraEdit.CamposInvalidos.Reembolsavel}" ng-if="itemItemCompraEdit.itemUsuario.Identificador || itemItemCompraEdit.itemItemCompra.Destinatario">
                    <label>@TextosPaginas.ItemCompra_Reembolsavel</label>
                    <input type="checkbox" ng-model="itemGastoEdit.itemGasto.Especie" class="checkbox">
                </div>

                </div>

        </div><!-- /.box-body -->

    </div>
</div>
<div class="modal-footer">

    <button type="button" class="btn btn-primary" ng-click="itemItemCompraEdit.close()">
        <span class="fa fa-close" aria-hidden="true">@TextosPaginas.Cancelar</span>
    </button>

    <button type="button" class="btn btn-primary  pull-right" ng-click="itemItemCompraEdit.salvar()">
        <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
    </button>
</div>