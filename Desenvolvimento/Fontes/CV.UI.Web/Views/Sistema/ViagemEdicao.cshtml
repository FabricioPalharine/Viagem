<section class="content-header">
    <h1>
        @TextosPaginas.Home_Viagem
        <small>@TextosPaginas.Viagem_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="Viagem({filtro:itemViagemEdit.filtroConsulta})">@TextosPaginas.Home_Viagem</a></li>
        <li class="active">@TextosPaginas.Viagem_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemViagemEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemViagemEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemViagemEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemViagemEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemViagemEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.IdentificadorUsuario}">
					<label>@TextosPaginas.Viagem_IdentificadorUsuario</label>
					<select ng-model="itemViagemEdit.itemUsuario" class="form-control" ng-options="obj.EMail for obj in itemViagemEdit.ListaUsuario track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.Nome}">
					<label>@TextosPaginas.Viagem_Nome</label>
					<input type="text" class="form-control" ng-model="itemViagemEdit.itemViagem.Nome" maxlength="200"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.DataInicio}">
					<label>@TextosPaginas.Viagem_DataInicio</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemViagemEdit.itemViagem.DataInicio" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemViagemEdit.itemViagem.DataInicio"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemViagemEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.DataFim}">
					<label>@TextosPaginas.Viagem_DataFim</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemViagemEdit.itemViagem.DataFim" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemViagemEdit.itemViagem.DataFim"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemViagemEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.Aberto}">
					<label><input type="checkbox" ng-model="itemViagemEdit.itemViagem.Aberto" >@TextosPaginas.Viagem_Aberto</label>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.UnidadeMetrica}">
					<label><input type="checkbox" ng-model="itemViagemEdit.itemViagem.UnidadeMetrica" >@TextosPaginas.Viagem_UnidadeMetrica</label>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.QuantidadeParticipantes}">
					<label>@TextosPaginas.Viagem_QuantidadeParticipantes</label>
					<input type="text" class="form-control" ng-model="itemViagemEdit.itemViagem.QuantidadeParticipantes" maxlength="7"  empty-to-null integer-input >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.PublicaGasto}">
					<label><input type="checkbox" ng-model="itemViagemEdit.itemViagem.PublicaGasto" >@TextosPaginas.Viagem_PublicaGasto</label>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.PercentualIOF}">
					<label>@TextosPaginas.Viagem_PercentualIOF</label>
					<input type="text" class="form-control" ng-model="itemViagemEdit.itemViagem.PercentualIOF"   empty-to-null decimal-input="{digits:4, integerDigits:5}">
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemEdit.CamposInvalidos.Moeda}">
					<label>@TextosPaginas.Viagem_Moeda</label>
					<input type="text" class="form-control" ng-model="itemViagemEdit.itemViagem.Moeda" maxlength="7"  empty-to-null integer-input >
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="Viagem({filtro:itemViagemEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->