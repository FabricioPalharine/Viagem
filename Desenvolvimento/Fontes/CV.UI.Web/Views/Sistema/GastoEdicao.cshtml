<section class="content-header">
    <h1>
        @TextosPaginas.Home_Gasto
        <small>@TextosPaginas.Gasto_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="Gasto({filtro:itemGastoEdit.filtroConsulta})">@TextosPaginas.Home_Gasto</a></li>
        <li class="active">@TextosPaginas.Gasto_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemGastoEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemGastoEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemGastoEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemGastoEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemGastoEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.IdentificadorViagem}">
					<label>@TextosPaginas.Gasto_IdentificadorViagem</label>
					<select ng-model="itemGastoEdit.itemViagem" class="form-control" ng-options="obj.Nome for obj in itemGastoEdit.ListaViagem track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.IdentificadorUsuario}">
					<label>@TextosPaginas.Gasto_IdentificadorUsuario</label>
					<select ng-model="itemGastoEdit.itemUsuario" class="form-control" ng-options="obj.EMail for obj in itemGastoEdit.ListaUsuario track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.Descricao}">
					<label>@TextosPaginas.Gasto_Descricao</label>
					<input type="text" class="form-control" ng-model="itemGastoEdit.itemGasto.Descricao" maxlength="100"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.Data}">
					<label>@TextosPaginas.Gasto_Data</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemGastoEdit.itemGasto.Data" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemGastoEdit.itemGasto.Data"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemGastoEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.Valor}">
					<label>@TextosPaginas.Gasto_Valor</label>
					<input type="text" class="form-control" ng-model="itemGastoEdit.itemGasto.Valor"   empty-to-null decimal-input="{digits:2, integerDigits:16}">
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.MoedaEstrageira}">
					<label><input type="checkbox" ng-model="itemGastoEdit.itemGasto.MoedaEstrageira" >@TextosPaginas.Gasto_MoedaEstrageira</label>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.Especie}">
					<label><input type="checkbox" ng-model="itemGastoEdit.itemGasto.Especie" >@TextosPaginas.Gasto_Especie</label>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.Moeda}">
					<label>@TextosPaginas.Gasto_Moeda</label>
					<input type="text" class="form-control" ng-model="itemGastoEdit.itemGasto.Moeda" maxlength="7"  empty-to-null integer-input >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.DataPagamento}">
					<label>@TextosPaginas.Gasto_DataPagamento</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemGastoEdit.itemGasto.DataPagamento" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemGastoEdit.itemGasto.DataPagamento"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemGastoEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.Dividido}">
					<label><input type="checkbox" ng-model="itemGastoEdit.itemGasto.Dividido" >@TextosPaginas.Gasto_Dividido</label>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemGastoEdit.CamposInvalidos.ApenasBaixa}">
					<label><input type="checkbox" ng-model="itemGastoEdit.itemGasto.ApenasBaixa" >@TextosPaginas.Gasto_ApenasBaixa</label>
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="Gasto({filtro:itemGastoEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->