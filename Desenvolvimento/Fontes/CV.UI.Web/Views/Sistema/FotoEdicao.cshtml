<section class="content-header">
    <h1>
        @TextosPaginas.Home_Foto
        <small>@TextosPaginas.Foto_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="Foto({filtro:itemFotoEdit.filtroConsulta})">@TextosPaginas.Home_Foto</a></li>
        <li class="active">@TextosPaginas.Foto_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemFotoEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemFotoEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemFotoEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemFotoEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemFotoEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.IdentificadorViagem}">
					<label>@TextosPaginas.Foto_IdentificadorViagem</label>
					<select ng-model="itemFotoEdit.itemViagem" class="form-control" ng-options="obj.Nome for obj in itemFotoEdit.ListaViagem track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.IdentificadorUsuario}">
					<label>@TextosPaginas.Foto_IdentificadorUsuario</label>
					<select ng-model="itemFotoEdit.itemUsuario" class="form-control" ng-options="obj.EMail for obj in itemFotoEdit.ListaUsuario track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.IdentificadorCidade}">
					<label>@TextosPaginas.Foto_IdentificadorCidade</label>
					<select ng-model="itemFotoEdit.itemCidade" class="form-control" ng-options="obj.Nome for obj in itemFotoEdit.ListaCidade track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.Comentario}">
					<label>@TextosPaginas.Foto_Comentario</label>
					<input type="text" class="form-control" ng-model="itemFotoEdit.itemFoto.Comentario" maxlength="50"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.Latitude}">
					<label>@TextosPaginas.Foto_Latitude</label>
					<input type="text" class="form-control" ng-model="itemFotoEdit.itemFoto.Latitude"   empty-to-null decimal-input="{digits:8, integerDigits:4}">
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.Longitude}">
					<label>@TextosPaginas.Foto_Longitude</label>
					<input type="text" class="form-control" ng-model="itemFotoEdit.itemFoto.Longitude"   empty-to-null decimal-input="{digits:8, integerDigits:4}">
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.Data}">
					<label>@TextosPaginas.Foto_Data</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemFotoEdit.itemFoto.Data" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemFotoEdit.itemFoto.Data"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemFotoEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.LinkThumbnail}">
					<label>@TextosPaginas.Foto_LinkThumbnail</label>
					<input type="text" class="form-control" ng-model="itemFotoEdit.itemFoto.LinkThumbnail" maxlength="200"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.LinkFoto}">
					<label>@TextosPaginas.Foto_LinkFoto</label>
					<input type="text" class="form-control" ng-model="itemFotoEdit.itemFoto.LinkFoto" maxlength="200"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.CodigoFoto}">
					<label>@TextosPaginas.Foto_CodigoFoto</label>
					<input type="text" class="form-control" ng-model="itemFotoEdit.itemFoto.CodigoFoto" maxlength="50"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.Video}">
					<label><input type="checkbox" ng-model="itemFotoEdit.itemFoto.Video" >@TextosPaginas.Foto_Video</label>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemFotoEdit.CamposInvalidos.TipoArquivo}">
					<label>@TextosPaginas.Foto_TipoArquivo</label>
					<input type="text" class="form-control" ng-model="itemFotoEdit.itemFoto.TipoArquivo" maxlength="20"  empty-to-null >
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="Foto({filtro:itemFotoEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->