<section class="content-header">
    <h1>
        @TextosPaginas.Home_ViagemAerea
        <small>@TextosPaginas.ViagemAerea_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="ViagemAerea({filtro:itemViagemAereaEdit.filtroConsulta})">@TextosPaginas.Home_ViagemAerea</a></li>
        <li class="active">@TextosPaginas.ViagemAerea_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemViagemAereaEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemViagemAereaEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemViagemAereaEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemViagemAereaEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemViagemAereaEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemAereaEdit.CamposInvalidos.IdentificadorViagem}">
					<label>@TextosPaginas.ViagemAerea_IdentificadorViagem</label>
					<select ng-model="itemViagemAereaEdit.itemViagem" class="form-control" ng-options="obj.Nome for obj in itemViagemAereaEdit.ListaViagem track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemAereaEdit.CamposInvalidos.CompanhiaAerea}">
					<label>@TextosPaginas.ViagemAerea_CompanhiaAerea</label>
					<input type="text" class="form-control" ng-model="itemViagemAereaEdit.itemViagemAerea.CompanhiaAerea" maxlength="50"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemAereaEdit.CamposInvalidos.DataPrevista}">
					<label>@TextosPaginas.ViagemAerea_DataPrevista</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemViagemAereaEdit.itemViagemAerea.DataPrevista" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemViagemAereaEdit.itemViagemAerea.DataPrevista"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemViagemAereaEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemAereaEdit.CamposInvalidos.DataInicio}">
					<label>@TextosPaginas.ViagemAerea_DataInicio</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemViagemAereaEdit.itemViagemAerea.DataInicio" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemViagemAereaEdit.itemViagemAerea.DataInicio"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemViagemAereaEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemViagemAereaEdit.CamposInvalidos.DataFim}">
					<label>@TextosPaginas.ViagemAerea_DataFim</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemViagemAereaEdit.itemViagemAerea.DataFim" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemViagemAereaEdit.itemViagemAerea.DataFim"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemViagemAereaEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="ViagemAerea({filtro:itemViagemAereaEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->