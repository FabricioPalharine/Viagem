<section class="content-header">
    <h1>
        @TextosPaginas.Home_CidadeGrupo
        <small>@TextosPaginas.CidadeGrupo_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="CidadeGrupo({filtro:itemCidadeGrupoEdit.filtroConsulta})">@TextosPaginas.Home_CidadeGrupo</a></li>
        <li class="active">@TextosPaginas.CidadeGrupo_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemCidadeGrupoEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemCidadeGrupoEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemCidadeGrupoEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemCidadeGrupoEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemCidadeGrupoEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemCidadeGrupoEdit.CamposInvalidos.IdentificadorViagem}">
					<label>@TextosPaginas.CidadeGrupo_IdentificadorViagem</label>
					<select ng-model="itemCidadeGrupoEdit.itemViagem" class="form-control" ng-options="obj.Nome for obj in itemCidadeGrupoEdit.ListaViagem track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemCidadeGrupoEdit.CamposInvalidos.IdentificadorCidadeFilha}">
					<label>@TextosPaginas.CidadeGrupo_IdentificadorCidadeFilha</label>
					<select ng-model="itemCidadeGrupoEdit.itemCidade" class="form-control" ng-options="obj.Nome for obj in itemCidadeGrupoEdit.ListaCidade track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemCidadeGrupoEdit.CamposInvalidos.IdentificadorCidadePai}">
					<label>@TextosPaginas.CidadeGrupo_IdentificadorCidadePai</label>
					<select ng-model="itemCidadeGrupoEdit.itemCidade" class="form-control" ng-options="obj.Nome for obj in itemCidadeGrupoEdit.ListaCidade track by obj.Identificador">
						<option value="">@TextosPaginas.Selecione</option>
					</select>
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="CidadeGrupo({filtro:itemCidadeGrupoEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->