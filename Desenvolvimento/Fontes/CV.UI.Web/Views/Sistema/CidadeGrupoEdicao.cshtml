
<div class="modal-header">
    <span>@TextosPaginas.CidadeGrupo_Manutencao</span>
</div>
<!-- Main content -->
<div class="modal-body" ng-init="itemCidadeGrupoEdit.load()">
        <!-- Default box -->
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="overlay" ng-show="itemCidadeGrupoEdit.loading">
                <i class="fa fa-refresh fa-spin text-gray"></i>
            </div>

                <div class="box-body">

                    <div class="row" ng-show="itemCidadeGrupoEdit.messages.length > 0">
                        <div class="col-md-12">
                            <div class="callout callout-danger">
                                <h4>@TextosPaginas.Geral_ValidarErros</h4>
                                <ul>
                                    <li ng-repeat="erro in itemCidadeGrupoEdit.messages">
                                        <span ng-bind="erro.Mensagem"></span>
                                    </li>
                                </ul>

                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-6" ng-class="{ 'has-error':itemCidadeGrupoEdit.CamposInvalidos.IdentificadorCidade}">
                            <label>@TextosPaginas.CidadeGrupo_IdentificadorCidadePai</label>
                            <select ng-model="itemCidadeGrupoEdit.itemCidade" class="form-control" ng-options="(obj.Nome + '( '  + obj.Estado + ')') for obj in itemCidadeGrupoEdit.ListaCidade track by obj.Identificador" ng-disabled="itemCidadeGrupoEdit.itemCidadeGrupo.Edicao">
                                <option value="">@TextosPaginas.Selecione</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12" ng-class="{ 'has-error':itemCidadeGrupoEdit.CamposInvalidos.CidadesFilhas}">
                            <label>@TextosPaginas.CidadeGrupo_IdentificadorCidadeFilha</label>
                            <div class="form-inline">
                                <label ng-repeat='itemCidade in itemCidadeGrupoEdit.ListaCidadeFilhas' class="radio" ng-if="itemCidade.Identificador != itemCidadeGrupoEdit.itemCidade.Identificador">
                                    <input type="checkbox" ng-model="itemCidade.Selecionado" >
                                    <label style="padding-top:5px">
                                        {{itemCidade.Nome}}({{itemCidade.Estado}})
                                    </label>
                                </label>

                            </div>
                        </div>   

                    </div>

                </div><!-- /.box-body -->
               

        </div><!-- /.box -->





</div><!-- /.content -->
<div class="modal-footer">
    <button type="button" class="btn btn-primary" ng-click="itemCidadeGrupoEdit.close()">
        <span class="fa fa-close" aria-hidden="true">@TextosPaginas.Cancelar</span>
    </button>

    <button type="button" class="btn btn-primary  pull-right" ng-click="itemCidadeGrupoEdit.save()">
        <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
    </button>

</div>