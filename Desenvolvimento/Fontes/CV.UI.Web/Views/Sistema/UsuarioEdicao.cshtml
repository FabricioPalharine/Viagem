<section class="content-header">
    <h1>
        @TextosPaginas.Home_Usuario
        <small>@TextosPaginas.Usuario_Manutencao</small>

    </h1>
    <ol class="breadcrumb">
        
        <li>@TextosPaginas.Home_Menu</li>
        <li><a ui-sref="Usuario({filtro:itemUsuarioEdit.filtroConsulta})">@TextosPaginas.Home_Usuario</a></li>
        <li class="active">@TextosPaginas.Usuario_Manutencao</li>
    </ol>

</section>
<!-- Main content -->
<section class="content" ng-init="itemUsuarioEdit.load()">
    <!-- Default box -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="overlay" ng-show="itemUsuarioEdit.loading">
            <i class="fa fa-refresh fa-spin text-gray"></i>
        </div>

        <form role="form" ng-submit="itemUsuarioEdit.save(form)" name="form" novalidate>
            <div class="box-body">

                 <div class="row" ng-show="itemUsuarioEdit.messages.length > 0">
                     <div class="col-md-12">
                         <div class="callout callout-danger">
                             <h4>@TextosPaginas.Geral_ValidarErros</h4>
                             <ul>
                                 <li ng-repeat="erro in itemUsuarioEdit.messages">
                                     <span ng-bind="erro.Mensagem"></span>
                                 </li>
                             </ul>

                         </div>
                     </div>

                </div>
                <div class="row">
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemUsuarioEdit.CamposInvalidos.Identificador}">
					<label>@TextosPaginas.Usuario_Identificador</label>
					<input type="text" class="form-control" ng-model="itemUsuarioEdit.itemUsuario.Identificador" maxlength="7"  empty-to-null integer-input >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemUsuarioEdit.CamposInvalidos.EMail}">
					<label>@TextosPaginas.Usuario_EMail</label>
					<input type="text" class="form-control" ng-model="itemUsuarioEdit.itemUsuario.EMail" maxlength="200"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemUsuarioEdit.CamposInvalidos.Nome}">
					<label>@TextosPaginas.Usuario_Nome</label>
					<input type="text" class="form-control" ng-model="itemUsuarioEdit.itemUsuario.Nome" maxlength="200"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemUsuarioEdit.CamposInvalidos.Token}">
					<label>@TextosPaginas.Usuario_Token</label>
					<input type="text" class="form-control" ng-model="itemUsuarioEdit.itemUsuario.Token" maxlength="100"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemUsuarioEdit.CamposInvalidos.RefreshToken}">
					<label>@TextosPaginas.Usuario_RefreshToken</label>
					<input type="text" class="form-control" ng-model="itemUsuarioEdit.itemUsuario.RefreshToken" maxlength="100"  empty-to-null >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemUsuarioEdit.CamposInvalidos.DataToken}">
					<label>@TextosPaginas.Usuario_DataToken</label>
<div class="dropdown">
                                <a class="dropdown-toggle"  role="button" data-toggle="dropdown">
                                    <div class="input-group">
                                        <input date-input ng-model="itemUsuarioEdit.itemUsuario.DataToken" class="form-control"  input-mask="{mask: 'd/m/y'}" 
                                               datapattern="dd/MM/yyyy">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <datetimepicker data-ng-model="itemUsuarioEdit.itemUsuario.DataToken"                                                   
                                                    data-datetimepicker-config="{  minView:'day' , langCode:itemUsuarioEdit.Idioma()  }" />
                                </ul>
                            </div>
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemUsuarioEdit.CamposInvalidos.Lifetime}">
					<label>@TextosPaginas.Usuario_Lifetime</label>
					<input type="text" class="form-control" ng-model="itemUsuarioEdit.itemUsuario.Lifetime" maxlength="7"  empty-to-null integer-input >
					</div>
					<div class="form-group col-md-6"  ng-class="{ 'has-error':itemUsuarioEdit.CamposInvalidos.Codigo}">
					<label>@TextosPaginas.Usuario_Codigo</label>
					<input type="text" class="form-control" ng-model="itemUsuarioEdit.itemUsuario.Codigo" maxlength="50"  empty-to-null >
					</div>
                                   

                </div>
             
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary " title="@TextosPaginas.Voltar" ui-sref="Usuario({filtro:itemUsuarioEdit.filtroConsulta})">
                    <span class="fa fa-arrow-left" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-primary  pull-right">
                    <span class="fa fa-save" aria-hidden="true"></span> @TextosPaginas.Geral_Salvar
                </button>

            </div>
        </form>
    </div><!-- /.box -->





</section><!-- /.content -->