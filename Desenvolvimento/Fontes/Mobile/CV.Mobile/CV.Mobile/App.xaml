<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CV.Mobile.App">
  <Application.Resources>
    <ResourceDictionary>

      <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="#006F44"/>
        <Setter Property="BarTextColor" Value="Color.White"/>
      </Style>
      <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="#006F44"/>
        <Setter Property="TextColor" Value="Color.White"/>
      </Style>
      <Style TargetType="ListView" x:Key="menuStyle">
        <Setter Property="BackgroundColor" Value="#006F44" />
      </Style>
      <Style TargetType="Label" x:Key="menuLabelStyle">
        <Setter Property="TextColor" Value="Color.White"/>
      </Style>
      
    </ResourceDictionary>

  </Application.Resources>
</Application>